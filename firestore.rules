rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // - Authenticated users can read any profile (needed for Browse Architects)
    // - Users can only edit their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Proposals Collection
    // - Users can create proposals
    // - Involved parties (homeowner or architect) can read/update
    match /proposals/{proposalId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        resource.data.homeownerId == request.auth.uid || 
        resource.data.architectId == request.auth.uid
      );
    }
  }
}
