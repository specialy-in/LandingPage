rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // - Authenticated users can read any profile (needed for Browse Architects)
    // - Users can only edit their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Proposals Collection
    // - Users can create proposals
    // - Involved parties (homeowner or architect) can read/update
    match /proposals/{proposalId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.homeownerId == request.auth.uid || 
        resource.data.architectId == request.auth.uid
      );
      allow update: if request.auth != null && (
        resource.data.homeownerId == request.auth.uid || 
        resource.data.architectId == request.auth.uid
      );
    }

    // Projects Collection
    // - Users can create projects
    // - Users can read/update/delete only their own projects
    match /projects/{projectId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Commissions Collection
    // - Users can create commission claims
    // - Users can read their own commissions
    match /commissions/{commissionId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Unlocked Leads Subcollection (under users)
    match /users/{userId}/unlockedLeads/{leadId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Credits Subcollection (under users)
    match /users/{userId}/credits/{creditId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
